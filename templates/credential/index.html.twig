{% extends 'base.html.twig' %}

{% block title %}Credentials index{% endblock %}

{% block body %}
    <h1>Credentials index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Url</th>
                <th>Login</th>
                <th>Password</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for credential in credentials %}
            <tr>
                <td>{{ credential.id }}</td>
                <td>{{ credential.url }}</td>
                <td>{{ credential.login }}</td>
                <td>{{ credential.password }}</td>
                <td>
                    <a href="{{ path('credential_show', {'id': credential.id}) }}">show</a>
                    <a href="{{ path('credential_edit', {'id': credential.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('credential_new') }}">Create new</a>
{% endblock %}
